<UserControl x:Class="Calculator.View.StandardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Memory buttons -->
        <Button x:Name="MC" Content="MC" Grid.Row="0" Grid.Column="0" Margin="2" Style="{StaticResource MemoryButtonDark}" Height="30" IsEnabled="False"/>
        <Button x:Name="MR" Content="MR" Grid.Row="0" Grid.Column="1" Margin="2" Style="{StaticResource MemoryButtonDark}" Height="30" IsEnabled="False"/>
        <Button x:Name="MPlus" Content="M+" Grid.Row="0" Grid.Column="2" Margin="2" Style="{StaticResource MemoryButtonDark}" Height="30"/>
        <Button x:Name="MMinus" Content="M-" Grid.Row="0" Grid.Column="3" Margin="2" Style="{StaticResource MemoryButtonDark}" Height="30"/>

        <!-- Clear row -->
        <Button Content="%" Grid.Row="1" Grid.Column="0" Margin="2" Style="{StaticResource OperationButtonDark}" Click="OperationButton_Click"/>
        <Button Content="CE" Grid.Row="1" Grid.Column="1" Margin="2" Style="{StaticResource OperationButtonDark}" Click="ClearEntryButton_Click"/>
        <Button Content="C" Grid.Row="1" Grid.Column="2" Margin="2" Style="{StaticResource OperationButtonDark}" Click="ClearButton_Click"/>
        <Button Content="⌫" Grid.Row="1" Grid.Column="3" Margin="2" Style="{StaticResource OperationButtonDark}" Click="BackspaceButton_Click"/>

        <!-- Function row -->
        <Button Content="¹/ₓ" Grid.Row="2" Grid.Column="0" Margin="2" Style="{StaticResource OperationButtonDark}" Click="OperationButton_Click"/>
        <Button Content="x²" Grid.Row="2" Grid.Column="1" Margin="2" Style="{StaticResource OperationButtonDark}" Click="OperationButton_Click"/>
        <Button Content="²√x" Grid.Row="2" Grid.Column="2" Margin="2" Style="{StaticResource OperationButtonDark}" Click="OperationButton_Click"/>
        <Button Content="÷" Grid.Row="2" Grid.Column="3" Margin="2" Style="{StaticResource OperationButtonDark}" FontSize="18" Click="OperationButton_Click"/>

        <!-- Number row 7-9 -->
        <Button Content="7" Grid.Row="3" Grid.Column="0" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="8" Grid.Row="3" Grid.Column="1" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="9" Grid.Row="3" Grid.Column="2" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="×" Grid.Row="3" Grid.Column="3" Margin="2" Style="{StaticResource OperationButtonDark}" FontSize="18" Click="OperationButton_Click"/>

        <!-- Number row 4-6 -->
        <Button Content="4" Grid.Row="4" Grid.Column="0" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="5" Grid.Row="4" Grid.Column="1" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="6" Grid.Row="4" Grid.Column="2" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="-" Grid.Row="4" Grid.Column="3" Margin="2" Style="{StaticResource OperationButtonDark}" FontSize="18" Click="OperationButton_Click"/>

        <!-- Number row 1-3 -->
        <Button Content="1" Grid.Row="5" Grid.Column="0" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="2" Grid.Row="5" Grid.Column="1" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="3" Grid.Row="5" Grid.Column="2" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="+" Grid.Row="5" Grid.Column="3" Margin="2" Style="{StaticResource OperationButtonDark}" FontSize="18" Click="OperationButton_Click"/>

        <!-- Number row 0 -->
        <Button Content="±" Grid.Row="6" Grid.Column="0" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NegateButton_Click"/>
        <Button Content="0" Grid.Row="6" Grid.Column="1" Margin="2" Style="{StaticResource NumberButtonDark}" Click="NumberButton_Click"/>
        <Button Content="." Grid.Row="6" Grid.Column="2" Margin="2" Style="{StaticResource NumberButtonDark}" Click="DecimalButton_Click"/>
        <Button Content="=" Grid.Row="6" Grid.Column="3" Margin="2" Style="{StaticResource EqualsButtonDark}" Click="EqualsButton_Click"/>
    </Grid>
</UserControl>