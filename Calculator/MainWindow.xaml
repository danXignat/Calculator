<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Calculator.View"
        Title="Calculator" Height="450" Width="300" 
        Background="#202020" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <TextBox x:Name="DisplayTextBox" 
                 Grid.Row="0" 
                 Height="60" 
                 FontSize="28" 
                 TextAlignment="Right" 
                 VerticalContentAlignment="Center"
                 Background="#202020" 
                 Foreground="White"
                 BorderThickness="0"
                 Margin="10,10,10,0"
                 IsReadOnly="True"
                 Text="0"/>

        <!-- Calculator Mode Selector -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5,10,5">
            <RadioButton x:Name="StandardRadio" Content="Standard" GroupName="CalculatorMode" 
                         Foreground="White" Margin="0,0,15,0" IsChecked="True"
                         Checked="CalculatorMode_Changed"/>
            <RadioButton x:Name="ProgrammerRadio" Content="Programmer" GroupName="CalculatorMode" 
                         Foreground="White"
                         Checked="CalculatorMode_Changed"/>
        </StackPanel>

        <!-- Calculator Views -->
        <ContentControl Grid.Row="2" x:Name="CalculatorViewHost">
            <view:StandardView x:Name="StandardView"/>
        </ContentControl>
    </Grid>
</Window>