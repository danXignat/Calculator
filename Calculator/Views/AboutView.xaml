<Window x:Class="Calculator.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="250" Width="350"
        Icon="pack://application:,,,/Calculator;component/Resources/calculator_icon.ico"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#202020">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Calculator" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Developer Information:" 
                       FontSize="16" 
                       Foreground="#14CA9C"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Ignat Dan" 
                       FontSize="14" 
                       Foreground="White"
                       Margin="10,2,0,2"/>

            <TextBlock Text="Grupa lf333 IA" 
                       FontSize="14" 
                       Foreground="White"
                       Margin="10,2,0,2"/>
        </StackPanel>

        <Button Grid.Row="2" 
                Content="OK" 
                Width="80" 
                Height="30"
                Background="#14CA9C"
                Foreground="White"
                BorderThickness="0"
                Click="CloseButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>